<div class="container">
  <%= form_tag sessions_path, class: "login" do %>
    <%#= hidden_field_tag :requested_url, params[:requested_url] %>

    <div class="header">
    </div>

    <div class="form-group">
      <%= text_field_tag :user, nil, class: "form-control", placeholder: "User name" %>
    </div>

    <div class="form-group">
      <%= password_field_tag :password, nil, class: "form-control", placeholder: 'Password' %>
    </div>

    <div class="action">
      <%= submit_tag "Log in", class: "btn" %>
    </div>
  <% end %>
</div>
